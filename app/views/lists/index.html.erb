<div class="banner style: crop: :fill;">
  <div class="container">
    <h1>Make your very own movie lists</h1>
    <p>Select from four different movies</p>
  </div>
</div>

<div class="container mb-5">
  <div class="my-flex-box mt-3">
    <h2>My lists</h2>
    <p class="btn btn-flat"><%= link_to "Create a new list", new_list_path %></p>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
        <p><%= link_to list.name, list_path(list) %></p>
      </div>
    <% end %>
  </div>
</div>
